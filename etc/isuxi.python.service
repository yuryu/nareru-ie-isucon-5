[Unit]
Description=isuxi-python
After=syslog.target mysqld.service

[Service]
WorkingDirectory=/home/isucon/webapp/python
EnvironmentFile=/home/isucon/env.sh
ExecStart=/home/isucon/.local/python3/bin/gunicorn -w 5 -b 127.0.0.1:8080 -b unix:/tmp/gunicorn.sock app:app
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target

